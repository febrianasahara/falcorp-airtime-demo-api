{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": [
        "es2017",
        "dom"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "build"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}
